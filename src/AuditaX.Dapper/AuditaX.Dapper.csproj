<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <!-- Build Settings -->
        <TargetFramework>net10.0</TargetFramework>
        <LangVersion>14</LangVersion>
        <Nullable>enable</Nullable>
        <ImplicitUsings>disable</ImplicitUsings>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <Features>strict</Features>

        <!-- Assembly Info -->
        <AssemblyName>AuditaX.Dapper</AssemblyName>
        <RootNamespace>AuditaX.Dapper</RootNamespace>

        <!-- Package Identity -->
        <PackageId>AuditaX.Dapper</PackageId>
        <Version>1.0.1</Version>
        <AssemblyVersion>1.0.1</AssemblyVersion>
        <FileVersion>1.0.1</FileVersion>
        <Product>AuditaX</Product>

        <!-- Package Metadata -->
        <Title>AuditaX.Dapper - Dapper Integration</Title>
        <Authors>jorg3roch4</Authors>
        <Description>Dapper ORM integration for AuditaX with IAuditUnitOfWork for manual audit control in lightweight data access scenarios.</Description>
        <Copyright>Copyright (c) 2025 jorg3roch4</Copyright>
        <PackageTags>audit;logging;dapper;orm;entity-tracking;dotnet</PackageTags>
        <PackageReleaseNotes>v1.0.1 - Improved table structure validation with detailed error messages.</PackageReleaseNotes>
        <NeutralLanguage>en</NeutralLanguage>
        <MinClientVersion>6.0</MinClientVersion>

        <!-- Repository & URLs -->
        <PackageProjectUrl>https://github.com/jorg3roch4/AuditaX</PackageProjectUrl>
        <RepositoryUrl>https://github.com/jorg3roch4/AuditaX</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>

        <!-- Package Assets -->
        <PackageIcon>icon-128x128.png</PackageIcon>
        <PackageReadmeFile>README.md</PackageReadmeFile>

        <!-- Documentation & Symbols -->
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>

        <!-- Build Configuration -->
        <Deterministic>true</Deterministic>
        <EnablePackageValidation>true</EnablePackageValidation>
        <ContinuousIntegrationBuild Condition="'$(GITHUB_ACTIONS)' == 'true'">true</ContinuousIntegrationBuild>

        <!-- Output -->
        <PackageOutputPath>$(MSBuildThisFileDirectory)../../artifacts</PackageOutputPath>
    </PropertyGroup>

    <!-- Package Assets -->
    <ItemGroup>
        <None Include="../../assets/icon-128x128.png" Pack="true" PackagePath="" />
        <None Include="../../LICENSE" Pack="true" PackagePath="" />
        <None Include="README.md" Pack="true" PackagePath="" />
    </ItemGroup>

    <!-- Project References -->
    <ItemGroup>
        <ProjectReference Include="../AuditaX/AuditaX.csproj" />
    </ItemGroup>

    <!-- Dependencies -->
    <ItemGroup>
        <PackageReference Include="Dapper" Version="2.1.*" />
        <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All" />
    </ItemGroup>
</Project>
